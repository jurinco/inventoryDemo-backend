<%= form_for(@inventory_item, html: {class: 'form-horizontal'}) do |f| %>
  <% if @inventory_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inventory_item.errors.count, "error") %> prohibited this inventory_item from being saved:</h2>

      <ul>
      <% @inventory_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :productName, {class: 'col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'} %>
      <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <%= f.text_field :productName, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :upc, {class: 'col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'} %>
      <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <%= f.number_field :upc, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :quantity, {class: 'col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'} %>
      <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <%= f.number_field :quantity, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :employeeId, {class: 'col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'} %>
      <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <%= f.text_field :employeeId, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :photoUri, {class: 'col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'} %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="position: relative">
        <% if @inventory_item.photoUri != nil %>
            <img src="<%= @inventory_item.photoUri %>" style="width:100%; height:auto">
            <button type="button" style="position: absolute; top: 5px; right: 20px" class="btn btn-sm btn-danger">Remove</button>
        <% end %>
        <%= f.file_field :photoUri, :class => 'invisible1' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :signatureUri, {class: 'col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label'} %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <% if @inventory_item.signatureUri != nil %>
            <img src="<%= @inventory_item.signatureUri %>" style="width:100%; height:auto">
            <button type="button" style="position: absolute; top: 5px; right: 20px" class="btn btn-sm btn-danger">Remove</button>
        <% end %>
        <%= f.file_field :signatureUri, :class => 'invisible1'  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-xs-offset-2 col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <%= f.submit :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', inventory_items_path, {class: "btn btn-secondary"} %>
      </div>
    </div>
<% end %>
