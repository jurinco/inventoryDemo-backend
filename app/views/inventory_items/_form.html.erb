<%= form_for(@item) do |f| %>
    <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this report from being saved:</h2>

          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :productName, {class: 'col-2 col-form-label'} %>
      <div class="col-10">
        <%= f.text_field :productName, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :upc, {class: 'col-2 col-form-label'} %>
      <div class="col-10">
        <%= f.number_field :upc, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :quantity, {class: 'col-2 col-form-label'} %>
      <div class="col-10">
        <%= f.number_field :quantity, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :employeeId, {class: 'col-2 col-form-label'} %>
      <div class="col-10">
        <%= f.text_field :employeeId, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :photoUri, {class: 'col-2 col-form-label'} %>
      <div class="col-4" style="position: relative">
        <% if @item.photoUri != nil %>
            <img src="<%= @item.photoUri %>" style="width:100%; height:auto">
            <button type="button" style="position: absolute; top: 5px; right: 20px" class="btn btn-sm btn-danger">Remove</button>
        <% end %>
        <%= f.file_field :photoUri, :class => 'invisible1' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :signatureUri, {class: 'col-2 col-form-label'} %>
      <div class="col-4">
        <% if @item.signatureUri != nil %>
            <img src="<%= @item.signatureUri %>" style="width:100%; height:auto">
            <button type="button" style="position: absolute; top: 5px; right: 20px" class="btn btn-sm btn-danger">Remove</button>
        <% end %>
        <%= f.file_field :signatureUri, :class => 'invisible1'  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', inventory_items_path, {class: "btn btn-secondary"} %>
      </div>
    </div>
<% end %>
