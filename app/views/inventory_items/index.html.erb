<div style="margin-bottom: 1em">
  <%= link_to 'New Item', new_inventory_item_path, {class: 'btn btn-primary'} %>
</div>



<% count = 1 %>
<% @inventory_items.each do |item| %>
    <% if count == 1 %>
        <div class="row">
    <% end %>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <div class="thumbnail">
        <img src="<%= item.photoUri %>" alt="<%= item.productName %>">
        <div class="caption">
          <h4><%= item.productName %></h4>
          <p><%= item.upc %></p>
        </div>
        <div>
          <%= link_to 'Show', item, {class: 'btn btn-sm btn-info', style: 'width: 30%'} %>
          <%= link_to 'Edit', edit_inventory_item_path(item), {class: 'btn btn-sm btn-primary', style: 'width: 30%'} %>
          <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-product-id="<%= item.id %>" data-product-name="<%= item.productName %>" data-target="#deleteItemDialog" style="width: 30%">
            Delete
          </button>
        </div>
      </div>
    </div>
    <% if count == 3 %>
        </div>
        <% count = 1 %>
    <% else %>
        <% count = count + 1 %>
    <% end %>

<% end %>



<div class="modal fade" id="deleteItemDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <a href="" data-method="delete" class="btn btn-danger" rel="nofollow">Delete</a>
      </div>
    </div>
  </div>
</div>

<script>
    $('#deleteItemDialog').on('show.bs.modal', function (event) {
        var itemId = $(event.relatedTarget).data('product-id');
        console.log(itemId)
        var itemName = $(event.relatedTarget).data('product-name');
        $(this).find('.modal-footer .btn-danger').attr("href", "/inventory_items/" + itemId);
        $(this).find('.modal-body').text("Delete item \"" + itemName + "\"?");
    });
</script>